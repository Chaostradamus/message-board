<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    .message { border: 1px solid #ccc; padding: 10px; margin: 10px 0; }
  </style>
</head>
<body>
  <h1><%= title %></h1>
  <a href="/new">Add New Message</a>

  <% messages.forEach((message, index) => { %>
    <div class="message">
      <p><%= message.text %></p>
      <p>- <%= message.user %>, <%= message.added.toLocaleString() %></p>
      <a href="/<%= index %>">View</a>
    </div>
  <% }) %>
</body>
</html>